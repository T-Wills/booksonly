@model BookListViewModel

<div class="col-md-12">
    @{

        foreach (var book in Model.Books)
        {
            <div class="col-md-3 float-left" id="card">
                <img src="~/Imgs/@book.Image" class="card-img-top" alt="#" style="width: 100%; height: 200px">
                <div class="card-body">
                    <h5 class="card-title">Title: @book.Title</h5>
                    <h5 class="card-price">Price: @book.Price.ToString("g")</h5>
                    <div class="card-about">
                        <p>@book.About</p>
                    </div>
                </div>
            </div>

        }

    }
</div>
